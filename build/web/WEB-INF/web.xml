<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>AdminPanelController</servlet-name>
        <servlet-class>controller.AdminPanelController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupController</servlet-name>
        <servlet-class>controller.SignupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentPanelController</servlet-name>
        <servlet-class>controller.StudentPanelController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateExamController</servlet-name>
        <servlet-class>controller.UpdateExamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddExamController</servlet-name>
        <servlet-class>controller.AddExamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteExamController</servlet-name>
        <servlet-class>controller.DeleteExamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProfileController</servlet-name>
        <servlet-class>controller.UpdateProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleRegistrationController</servlet-name>
        <servlet-class>controller.HandleRegistrationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListNotificationController</servlet-name>
        <servlet-class>controller.ListNotificationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteNotificationController</servlet-name>
        <servlet-class>controller.DeleteNotificationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListExamController</servlet-name>
        <servlet-class>controller.ListExamController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPanelController</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentPanelController</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateExamController</servlet-name>
        <url-pattern>/updateExam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddExamController</servlet-name>
        <url-pattern>/addExam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteExamController</servlet-name>
        <url-pattern>/deleteExam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProfileController</servlet-name>
        <url-pattern>/updateProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HandleRegistrationController</servlet-name>
        <url-pattern>/handleRegistration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListNotificationController</servlet-name>
        <url-pattern>/listNote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteNotificationController</servlet-name>
        <url-pattern>/deleteNote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListExamController</servlet-name>
        <url-pattern>/listExam</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
